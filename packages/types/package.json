{
  "name": "@ohbug-server/types",
  "version": "1.0.0-alpha.0",
  "description": "ohbug server common types",
  "author": "chenyueban",
  "files": [
    "dist"
  ],
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "tsc": "tsc",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "tsc -w",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@ohbug/types": "^1.1.4",
    "source-map-trace": "^0.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
