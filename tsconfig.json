{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@ohbug-server/common": ["packages/common/src"],
      "@ohbug-server/common/*": ["packages/common/src/*"],
      "@ohbug-server/dashboard": ["packages/dashboard/src"],
      "@ohbug-server/dashboard/*": ["packages/dashboard/src/*"],
      "@ohbug-server/manager": ["packages/manager/src"],
      "@ohbug-server/manager/*": ["packages/manager/src/*"],
      "@ohbug-server/notifier": ["packages/notifier/src"],
      "@ohbug-server/notifier/*": ["packages/notifier/src/*"],
      "@ohbug-server/transfer": ["packages/transfer/src"],
      "@ohbug-server/transfer/*": ["packages/transfer/src/*"],
      "@ohbug-server/types": ["packages/types/src"],
      "@ohbug-server/types/*": ["packages/types/src/*"]
    }
  }
}
